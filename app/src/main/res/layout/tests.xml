<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_alz"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:onClick="alzhimers"
            android:scaleType="centerCrop"
            android:src="@drawable/alzheimers" />

        <ImageView
            android:id="@+id/img_eat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/img_alz"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eating" />

        <ImageView
            android:id="@+id/img_anx"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/img_eat"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anx" />

        <ImageView
            android:id="@+id/img_scz"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/img_anx"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/schizophrenia" />

        <ImageView
            android:id="@+id/img_dep"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/img_scz"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dep" />

    </RelativeLayout>
</ScrollView>


